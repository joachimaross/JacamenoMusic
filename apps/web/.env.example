# JACAMENO Web Application Environment Variables
# ==================================================
# This file documents all environment variables used in the JACAMENO web application.
# Copy this file to .env.local for local development.
# For production deployment on Vercel, set these in the Vercel Dashboard.

# API Configuration
# -----------------
# Main backend API endpoint (Node.js/Express/GraphQL)
NEXT_PUBLIC_API_URL=http://localhost:4000

# WebSocket endpoint for real-time features
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# AI Microservices endpoint (FastAPI Python service)
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:8000

# Authentication (Firebase/Supabase)
# -----------------------------------
# Firebase configuration for user authentication
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-storage-bucket
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Analytics & Monitoring
# ----------------------
# Google Analytics tracking ID
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Sentry DSN for error tracking (optional but recommended for production)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Third-Party Integrations
# ------------------------
# Spotify API credentials (for music streaming integration)
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/api/auth/callback/spotify

# AWS S3 for media storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=jacameno-music

# Payment Processing (Stripe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-key
STRIPE_SECRET_KEY=sk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Feature Flags
# -------------
# Enable/disable VST plugin support
NEXT_PUBLIC_ENABLE_VST_PLUGINS=true

# Enable/disable AI-powered features
NEXT_PUBLIC_ENABLE_AI_FEATURES=true

# Enable/disable real-time collaboration
NEXT_PUBLIC_ENABLE_COLLABORATION=true

# Enable/disable beta features
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# Environment
# -----------
# Node environment: development, production, or test
NODE_ENV=development

# Next.js telemetry (set to 1 to disable)
NEXT_TELEMETRY_DISABLED=0
